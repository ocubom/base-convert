{
    "name" : "ocubom/base-convert",
    "type": "library",
    "description" : "Safe number conversion between arbitrary bases.",
    "keywords" : [
        "big",
        "number",
        "base",
        "base32",
        "base",
        "binary",
        "hexadecimal",
        "crockford",
        "big number",
        "precision",
        "arbitrary precision"
    ],
    "homepage" : "http://github.com/ocubom/base-convert",
    "license" : "MIT",
    "authors" : [{
        "name" : "Oscar Cubo Medina",
        "homepage" : "http://ocubom.github.io"
    }],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "symfony/phpunit-bridge": "^5.0 || ^6.0"
    },
    "suggest": {
    },
    "autoload": {
        "psr-4": { "Ocubom\\Math\\": "src/" },
        "files": [
            "src/polyfill.php",
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Ocubom\\Math\\Tests\\": "tests/" }
    },
    "scripts": {
        "fix": "./vendor/bin/php-cs-fixer fix",
        "test": "./vendor/bin/simple-phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
